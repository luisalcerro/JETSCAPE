<?xml version="1.0"?>

<jetscape>
  
  <nEvents> 11 </nEvents>
  
  <outputFilename>test_out_PP</outputFilename>
  <JetScapeWriterHepMC> on </JetScapeWriterHepMC>
  <JetScapeWriterAscii> off </JetScapeWriterAscii>
  <JetScapeWriterFinalStateHadronsAscii> on </JetScapeWriterFinalStateHadronsAscii> 
  <JetScapeWriterFinalStatePartonsAscii> on </JetScapeWriterFinalStatePartonsAscii>
  <!-- Hard Process -->
  <Hard>
    <PythiaGun>
      <pTHatMin>10</pTHatMin>
      <pTHatMax>2510</pTHatMax>
      <eCM>5020</eCM>
      <LinesToRead>
        HardQCD:all = off
        PromptPhoton:all = off
        Top:gg2ttbar = on
        Top:qqbar2ttbar = on
        24:onMode = off
        24:onPosIfAny =  13
        24:onNegIfAny = 1 2 3 4 5
      </LinesToRead>
    </PythiaGun>
  </Hard>
  
  <!--Eloss Modules -->
  <Eloss>
    <Matter>
      <Q0> 1.0 </Q0>
      <in_vac> 1 </in_vac>
      <vir_factor> 0.25 </vir_factor>
      <recoil_on> 0 </recoil_on>
      <broadening_on> 0 </broadening_on>
      <brick_med> 0 </brick_med>
    </Matter>
  </Eloss>
  
  <!-- Jet Hadronization Module -->
  <JetHadronization>
    <name>colorless</name>
    <eCMforHadronization>2510</eCMforHadronization>
  </JetHadronization>
  
</jetscape>
